<Window x:Class="APISwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APISwitcher"
        mc:Ignorable="d"
        Title="Claude Code 账号切换工具" Height="460" Width="780"
        WindowStartupLocation="CenterScreen"
        Icon="{StaticResource AppIcon}"
        KeyboardNavigation.TabNavigation="None">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Claude Code 账号配置切换"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
           
        </StackPanel>

        <!-- 配置按钮 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Profiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="200"
                            Margin="8"
                            Background="#F2F4F8"
                            BorderThickness="2"
                            BorderBrush="#9FA7B3"
                            CornerRadius="8"
                            Cursor="Hand"
                            FocusVisualStyle="{x:Null}"
                            Focusable="False">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="MinHeight" Value="80"/>
                                <Setter Property="Padding" Value="10"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Background" Value="#DFF6E3"/>
                                        <Setter Property="BorderBrush" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding Command="{Binding DataContext.SwitchProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        MouseAction="LeftClick"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center">
                            <!-- Profile名称 -->
                            <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="Black"/>

                            <!-- 当前使用标识 -->
                            <TextBlock Text="● 当前使用"
                                     FontSize="11"
                                     Foreground="Green"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Center"
                                     Margin="0,4,0,0"
                                     Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- 余额信息 -->
                            <Border Margin="0,6,0,0"
                                    Visibility="{Binding ShouldShowBalance, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding BalanceInfo.DisplayText}"/>
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                            <Style.Triggers>
                                                <!-- 加载中 -->
                                                <DataTrigger Binding="{Binding BalanceInfo.IsLoading}" Value="True">
                                                    <Setter Property="Foreground" Value="#757575"/>
                                                </DataTrigger>
                                                <!-- 错误状态 -->
                                                <DataTrigger Binding="{Binding BalanceInfo.HasError}" Value="True">
                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                </DataTrigger>
                                                <!-- 无限额度 -->
                                                <DataTrigger Binding="{Binding BalanceInfo.IsUnlimited}" Value="True">
                                                    <Setter Property="Foreground" Value="#388E3C"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>

        <!-- 订阅信息面板 -->
        <Border x:Name="SubscriptionPanel"
                Grid.Row="2"
                Margin="0,10,0,0"
                Padding="15"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="Collapsed"
                Opacity="0"
                RenderTransformOrigin="0.5,0">
            <Border.RenderTransform>
                <ScaleTransform ScaleY="0"/>
            </Border.RenderTransform>
            <StackPanel>
                <!-- 标题行（使用Grid避免布局跳动） -->
                <Grid Margin="0,0,0,10" Height="22">
                    <TextBlock Text="月卡订阅信息"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="更新失败"
                               FontSize="12"
                               Foreground="#D32F2F"
                               Margin="120,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Visibility="{Binding ActiveSubscriptionInfo.HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <!-- 加载状态 -->
                <TextBlock Text="加载中..."
                           FontSize="12"
                           Foreground="#757575"
                           Visibility="{Binding ActiveSubscriptionInfo.IsFirstLoad, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- 订阅数据显示 -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <!-- 只在首次加载时隐藏，刷新时保留显示 -->
                                <DataTrigger Binding="{Binding ActiveSubscriptionInfo.IsFirstLoad}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ActiveSubscriptionInfo.HasError}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- 日限额 -->
                    <StackPanel Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="日限额" FontSize="13" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="2" FontSize="12" Foreground="#666">
                                <Run Text="{Binding ActiveSubscriptionInfo.DailyQuotaUsedUsd, Mode=OneWay}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding ActiveSubscriptionInfo.DailyQuotaLimitUsd, Mode=OneWay}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding ActiveSubscriptionInfo.DailyUsagePercent, StringFormat={}{0:F1}, Mode=OneWay}"/>
                                <Run Text="%)"/>
                            </TextBlock>
                        </Grid>
                        <ProgressBar Height="8"
                                     Margin="0,3,0,0"
                                     Value="{Binding ActiveSubscriptionInfo.DailyUsagePercent, Mode=OneWay}"
                                     Maximum="100"/>
                    </StackPanel>

                    <!-- 周限额 -->
                    <StackPanel Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="周限额" FontSize="13" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="2" FontSize="12" Foreground="#666">
                                <Run Text="{Binding ActiveSubscriptionInfo.WeeklyQuotaUsedUsd, Mode=OneWay}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding ActiveSubscriptionInfo.WeeklyQuotaLimitUsd, Mode=OneWay}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding ActiveSubscriptionInfo.WeeklyUsagePercent, StringFormat={}{0:F1}, Mode=OneWay}"/>
                                <Run Text="%)"/>
                            </TextBlock>
                        </Grid>
                        <ProgressBar Height="8"
                                     Margin="0,3,0,0"
                                     Value="{Binding ActiveSubscriptionInfo.WeeklyUsagePercent, Mode=OneWay}"
                                     Maximum="100"/>
                    </StackPanel>

                    <!-- 总限额 -->
                    <StackPanel Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="总限额" FontSize="13" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="2" FontSize="12" Foreground="#666">
                                <Run Text="{Binding ActiveSubscriptionInfo.TotalQuotaUsedUsd, Mode=OneWay}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding ActiveSubscriptionInfo.TotalQuotaLimitUsd, Mode=OneWay}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding ActiveSubscriptionInfo.TotalUsagePercent, StringFormat={}{0:F1}, Mode=OneWay}"/>
                                <Run Text="%)"/>
                            </TextBlock>
                        </Grid>
                        <ProgressBar Height="8"
                                     Margin="0,3,0,0"
                                     Value="{Binding ActiveSubscriptionInfo.TotalUsagePercent, Mode=OneWay}"
                                     Maximum="100"/>
                    </StackPanel>

                    <!-- 到期时间 -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="到期时间："
                                   FontSize="13"
                                   Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="1" FontSize="13">
                            <Run Text="{Binding ActiveSubscriptionInfo.ExpireTimeFormatted, Mode=OneWay}"/>
                            <Run Text=" (剩余 "/>
                            <Run Text="{Binding ActiveSubscriptionInfo.DaysRemaining, Mode=OneWay}"/>
                            <Run Text=" 天)"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="刷新配置"
                    Command="{Binding RefreshCommand}"
                    Width="120"
                    Height="38"
                    FontSize="14"
                    Margin="5"
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <!-- 状态栏 -->
        <Border Grid.Row="4"
                Background="#F5F5F5"
                Padding="10"
                CornerRadius="5"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                           Width="20"
                           Height="20"
                           IsIndeterminate="True"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1"
                         Text="{Binding StatusMessage}"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Foreground="#666666"/>
            </Grid>
        </Border>
    </Grid>
</Window>
