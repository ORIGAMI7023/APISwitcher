<Application x:Class="APISwitcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:APISwitcher"
             xmlns:converters="clr-namespace:APISwitcher.Converters">
    <Application.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:ActiveBackgroundConverter x:Key="ActiveBackgroundConverter"/>
        <converters:ActiveBorderConverter x:Key="ActiveBorderConverter"/>
        <converters:ActiveForegroundConverter x:Key="ActiveForegroundConverter"/>

        <!-- Application Icon -->
        <DrawingImage x:Key="AppIcon">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <!-- Background Circle -->
                    <GeometryDrawing Brush="#4F83FF">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="16,16" RadiusX="15" RadiusY="15"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <!-- Switch Symbol: Two Arrows -->
                    <GeometryDrawing Brush="White">
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M 10,8 L 14,11 L 10,14 M 22,18 L 18,21 L 22,24 M 14,11 L 24,11 M 8,21 L 18,21"/>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="White" Thickness="2" StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E8ECF5"/>
            <Setter Property="Foreground" Value="#1F2933"/>
            <Setter Property="BorderBrush" Value="#CBD2D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F4FF"/>
                    <Setter Property="BorderBrush" Value="#4F83FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D6E4FF"/>
                    <Setter Property="BorderBrush" Value="#3B6AD6"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
